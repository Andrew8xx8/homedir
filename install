#!/bin/sh

remote_param="$1"
if [ "${remote_param}x" = "x" ] || [  "${remote_param}x" = "remotex" ]; then
    echo "Remote install"
    is_remote="yes"
elif [ "${remote_param}x" = "localx" ]; then
    echo "Local install"
    is_remote=""
else
    echo "Usage $0 local|remote"
    exit 255
fi

cp -Rf .tools ~/

rm -Rf ~/.zshkit
cp -Rf zshkit ~/.zshkit
~/.zshkit/install

cat zshrc_addons >> ~/.zshrc

if [ -e ~/.zshrc.local ]; then
    echo "source ~/.zshrc.local" >> ~/.zshrc
fi


cp -f .gitconfig ~/
cp -f .screenrc ~/
cp -f .gitignore ~/
cp -f .cshrc ~/

cp -Rf .vim ~/
cp -f .vimrc ~/
if [ "${is_remote}x" = "x" ]; then
    cat ./.vimrc.local >> ~/.vimrc
else 
    cat ./.vimrc.remote >> ~/.vimrc
fi
echo ' ' >> ~/.vimrc 
echo '" Command aliases: ' >> ~/.vimrc 
cat ./.vimrc.cmdalias >> ~/.vimrc
