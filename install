#!/bin/sh

cp -Rf .tools ~/

rm -Rf ~/.zshkit
cp -Rf zshkit ~/.zshkit
~/.zshkit/install

cat zshrc_addons >> ~/.zshrc

cp -f .gitconfig ~/
cp -f .screenrc ~/
cp -f .gitignore ~/
cp -f .cshrc ~/

if [ ! -e ~/.vim.backup ]; then
  echo "backup .vim .."
  mv -f ~/.vim ~/.vim.backup
fi
if [ ! -e ~/.vimrc.backup ]; then
  echo "backup .vimrc .."
  mv -f ~/.vimrc ~/.vimrc.backup
fi

rm -Rf ~/.vim
rm -f ~/.vimrc

cp -Rf vimfiles ~/.vim
cp -f .vimrc ~/.vimrc

cp -Rf vim.snippets/* ~/.vim/snippets/

cat ./.vimrc.local >> ~/.vimrc

echo ' ' >> ~/.vimrc 
echo '" Command aliases: ' >> ~/.vimrc 
cat ./.vimrc.cmdalias >> ~/.vimrc
